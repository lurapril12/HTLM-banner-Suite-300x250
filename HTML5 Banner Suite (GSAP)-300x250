  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script>
    document.querySelectorAll('.banner').forEach(banner => {
      const tl = gsap.timeline();
      tl.to(banner.querySelectorAll('h1, p, .cta'), {
        opacity: 1,
        y: 0,
        duration: .6,
        stagger: .15,
        ease: "power2.out"
      })
        .to(banner.querySelector('img'), {
          opacity: 1,
          scale: 1,
          duration: .8,
          ease: "power2.out"
        }, "-=0.4");
    });
  </script>

